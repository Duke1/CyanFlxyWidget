<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:orientation="vertical">

    <include layout="@layout/activity_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.cyanflxy.widget.CircleAnimateView
            android:id="@+id/circle_animation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#ec98c1"
            app:CircleAnimateView_center_image="@drawable/mic"
            app:CircleAnimateView_center_size="200dp"
            app:CircleAnimateView_center_x_relative="right"
            app:CircleAnimateView_center_y_relative="bottom"
            app:CircleAnimateView_inner_circle_image="@drawable/inner_circle"
            app:CircleAnimateView_max_value="100"
            app:CircleAnimateView_outer_circle_image="@drawable/outer_circle"/>
    </RelativeLayout>
</LinearLayout>