<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/outer_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mic_img"
        android:layout_alignLeft="@+id/mic_img"
        android:layout_alignRight="@+id/mic_img"
        android:layout_alignTop="@+id/mic_img"
        android:contentDescription="@null"
        android:src="@drawable/voice_mic_outer_circle_shape"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/inner_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mic_img"
        android:layout_alignLeft="@+id/mic_img"
        android:layout_alignRight="@+id/mic_img"
        android:layout_alignTop="@+id/mic_img"
        android:contentDescription="@null"
        android:src="@drawable/voice_mic_inner_circle_shape"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/mic_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:contentDescription="@null"
        android:src="@drawable/voice_mic"/>

</merge>